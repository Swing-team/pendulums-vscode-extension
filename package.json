{
  "name": "pendulums-vscode-extension",
  "displayName": "Pendulums",
  "description": "Pendulums vscode extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onView:pendulums"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pendulums",
          "title": "Pendulums",
          "icon": "resources/pendulums.svg"
        }
      ]
    },
    "views": {
      "pendulums": [
        {
          "id": "pendulums-pendulums",
          "name": "Pendulums"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "alt": "pendulums.sync",
          "group": "navigation",
          "command": "pendulums.sync"
        },
        {
          "alt": "pendulums.signOut",
          "group": "navigation",
          "command": "pendulums.signOut"
        }
      ],
      "view/item/context": [
        {
          "command": "pendulums.play",
          "when": "viewItem == 'false' ",
          "group": "inline"
        },
        {
          "command": "pendulums.stop",
          "when": "viewItem == 'true' ",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "pendulums.signIn",
        "title": "Sign In"
      },
      {
        "command": "pendulums.signOut",
        "title": "Sign Out",
        "icon": "$(sign-out)"
      },
      {
        "command": "pendulums.sync",
        "title": "Sync",
        "icon": "$(sync)"
      },
      {
        "command": "pendulums.getProjects",
        "title": "Get Projects"
      },
      {
        "command": "pendulums.play",
        "icon": "$(play)",
        "title": "Play"
      },
      {
        "command": "pendulums.stop",
        "icon": "$(debug-stop)",
        "title": "Stop"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.2",
    "@types/vscode": "^1.59.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.0",
    "typescript": "^4.3.5",
    "tslint": "^6.1.3",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "axios": "^0.21.1"
  }
}
